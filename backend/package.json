  "dependencies": {
    "axios": "^0.16.2",
    "bluebird": "^3.5.0",
    "chalk": "^2.1.0",
    "cli-progress": "^1.5.0",
    "cron": "^1.3.0",
    "dotenv": "^4.0.0",
    "fb": "^2.0.0",
    "googleapis": "^20.1.0",
    "joi": "^10.6.0",
    "jsonwebtoken": "^7.4.1",
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-compress": "^2.0.0",
    "koa-router": "^7.2.1",
    "koa-static": "^4.0.1",
    "koa-websocket": "^4.0.0",
    "lzutf8": "^0.4.6",
    "moment": "^2.18.1",
    "mongoose": "^4.11.4",
    "mongoose-double": "^0.0.1",
    "query-string": "^5.0.0",
    "redis": "^2.8.0",
    "shortid": "^2.2.8",
    "ws": "^3.1.0"
  },
  "devDependencies": {
    "eslint": "^4.3.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.1.1"
  },
  "scripts": {
    "start:dev": "NODE_PATH=src nodemon --watch src/ src/index.js",
    "crawler:dev": "NODE_PATH=src nodemon --watch src/crawler/ src/crawler/index.js --ignore src/crawler/*.json",
    "trader:dev": "NODE_PATH=src nodemon --inspect --watch src/trader/ src/trader/index.js",
    "worker:dev": "NODE_PATH=src nodemon --watch src/worker/ src/worker/index.js",
    "dev": "npm-run-all --parallel start:dev crawler:dev trader:dev worker:dev",
    "workers": "pm2 start workers.config.json",
    "server": "pm2 start deploy.config.json",
    "start": "npm-run-all workers server",
    "reload:workers": "pm2 reload workers.config.json",
    "reload:server": "pm2 reload deploy.config.json",
    "reload": "npm-run-all reload:workers reload:server",
    "monthly": "NODE_PATH=src node src/worker/setMonthlyValue",
    "process": "NODE_PATH=src node src/worker/processManually"
  }
}
